    "sequelize": "^6.37.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "bun-types": "latest",
